<?xml version="1.0" encoding="UTF-8" ?>
<Context>
    <Resource name="jdbc/samnet"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="org.mariadb.jdbc.Driver"
              url="jdbc:mariadb://${db_host}/samnet?serverTimezone=UTC"
              username="${db_user}"
              password="${db_pass}"
              maxTotal="16"
              maxIdle="4"
              maxWaitMillis="-1" />
</Context>